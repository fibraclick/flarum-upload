{
    "name": "fibraclick/flarum-upload",
    "description": "Upload images from Flarum post composer",
    "keywords": [
        "flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.0.0",
        "ext-fileinfo": "*",
        "intervention/image": "^2.5"
    },
    "autoload": {
        "psr-4": {
            "BotFactory\\Upload\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Upload",
            "category": "feature",
            "icon": {
                "name": "fas fa-arrow-circle-up",
                "backgroundColor": "#D2202F",
                "color": "#ffffff"
            }
        }
    }
}
